<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kế thừa tree view để thêm cột validation status -->
    <record id="view_purchase_request_tree_inherit_validation_status" model="ir.ui.view">
        <field name="name">purchase.request.tree.inherit.validation.status</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_tree"/>
        <field name="arch" type="xml">
            <!-- Thêm cột Trạng thái Validate sau cột Status -->
            <xpath expr="//field[@name='state']" position="after">
                <field name="validation_status_display" 
                       string="Validation Status"
                       optional="show"
                       decoration-success="validation_status_display == '2/2'"
                       decoration-warning="validation_status_display == '1/2'"
                       decoration-info="validation_status_display == '0/2'"/>
            </xpath>
            
            <!-- Thêm cột Ngày Validate sau cột Trạng thái Validate -->
            <xpath expr="//field[@name='validation_status_display']" position="after">
                <field name="last_validation_date" 
                       string="Validation Date"
                       optional="show"/>
            </xpath>
        </field>
    </record>
    

</odoo>
