<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_report_tree" model="ir.ui.view">
        <field name="name">project.report.tree</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <list string="Daily Reports" 
                  decoration-info="state=='draft'" 
                  decoration-success="state=='approved'" 
                  decoration-warning="state=='submitted'" 
                  decoration-danger="state=='rejected'"
                  class="o_project_report_list">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="expected_result_deadline" optional="hide"/>
                <field name="actual_result_deadline" optional="hide"/>
                <field name="approved_by"/>
                <field name="approved_date"/>
                <field name="state" widget="badge"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_project_report_form" model="ir.ui.view">
        <field name="name">project.report.form</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <form string="Daily Report" class="o_project_report_form">
                <header>
                    <button name="action_submit" 
                            string="Confirm" 
                            type="object" 
                            class="btn-primary" 
                            invisible="state != 'draft'"/>
                    <button name="action_approve" 
                            string="Approve" 
                            type="object" 
                            class="btn-success" 
                            groups="hr_timesheet.group_hr_timesheet_approver"
                            invisible="state != 'submitted'"/>
                    <button name="action_reject" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger" 
                            groups="hr_timesheet.group_hr_timesheet_approver"
                            invisible="state != 'submitted'"/>
                    <button name="action_reset_to_draft" 
                            string="Reset to Draft" 
                            type="object" 
                            class="btn-secondary" 
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name..." class="o_text_overflow"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" required="True"/>
                            <field name="employee_id" required="True" domain="[('company_id', 'in', [company_id, False])]"/>
                            <field name="project_id" required="True"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="task_content" placeholder="Task content..."/>
                    </group>
                    <group>
                        <field name="expected_result" placeholder="Expected result..."/>
                        <field name="expected_result_deadline"/>
                    </group>
                    <group>
                        <field name="actual_result" placeholder="Actual work result..."/>
                        <field name="actual_result_deadline"/>
                    </group>
                    <group>
                        <field name="description" placeholder="Notes..."/>
                    </group>
                    <group invisible="state not in ['approved', 'rejected']">
                        <group invisible="state != 'approved'">
                            <field name="approved_by" readonly="True"/>
                            <field name="approved_date" readonly="True"/>
                        </group>
                        <group invisible="state != 'rejected'">
                            <field name="rejection_reason" readonly="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_report_search" model="ir.ui.view">
        <field name="name">project.report.search</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <search string="Search Daily Reports">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="date"/>
                <field name="expected_result_deadline"/>
                <field name="actual_result_deadline"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('date', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')), ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('date', '>=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d')), ('date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_project_report_kanban" model="ir.ui.view">
        <field name="name">project.report.kanban</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_project_report_kanban">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="employee_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Project:</strong> <field name="project_id"/>
                                    </div>
                                    <div>
                                        <strong>Date:</strong> <field name="date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_project_report_calendar" model="ir.ui.view">
        <field name="name">project.report.calendar</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <calendar string="Daily Reports" 
                      date_start="date" 
                      color="project_id"
                      event_open_popup="true">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="view_project_report_pivot" model="ir.ui.view">
        <field name="name">project.report.pivot</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <pivot string="Daily Reports Analysis">
                <field name="employee_id" type="row"/>
                <field name="project_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="view_project_report_graph" model="ir.ui.view">
        <field name="name">project.report.graph</field>
        <field name="model">project.report</field>
        <field name="arch" type="xml">
            <graph string="Daily Reports Analysis" type="bar">
                <field name="project_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="action_project_report" model="ir.actions.act_window">
        <field name="name">Daily Reports</field>
        <field name="res_model">project.report</field>
        <field name="view_mode">list,form,kanban,calendar,pivot,graph</field>
        <field name="view_id" ref="project_report.view_project_report_tree"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('project_report.view_project_report_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('project_report.view_project_report_form')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('project_report.view_project_report_kanban')}),
            (0, 0, {'view_mode': 'calendar', 'view_id': ref('project_report.view_project_report_calendar')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('project_report.view_project_report_pivot')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('project_report.view_project_report_graph')})]"/>
        <field name="context">{'search_default_this_month': 1, 'search_default_group_employee': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first daily report!
            </p>
            <p>
                Track daily work progress and employee contributions with simple reports.
            </p>
        </field>
    </record>

    <record id="action_contract_performance_report" model="ir.actions.act_window">
        <field name="name">Contract Performance Reports</field>
        <field name="res_model">contract.performance.report</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="project_report.view_contract_performance_report_tree"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('project_report.view_contract_performance_report_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('project_report.view_contract_performance_report_form')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('project_report.view_contract_performance_report_kanban')})]"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first contract performance report!
            </p>
            <p>
                Track contract performance and execution progress with detailed reports.
            </p>
        </field>
    </record>

    <record id="action_information_receipt_form" model="ir.actions.act_window">
        <field name="name">Information Receipt Forms</field>
        <field name="res_model">information.receipt.form</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="project_report.view_information_receipt_form_tree"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('project_report.view_information_receipt_form_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('project_report.view_information_receipt_form_form')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('project_report.view_information_receipt_form_kanban')})]"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first information receipt form!
            </p>
            <p>
                Track customer information requests and processing times with detailed forms.
            </p>
        </field>
    </record>

    <menuitem id="menu_project_report_root" 
              name="Daily Reports" 
              sequence="10"
              web_icon="project_report,static/description/icon.svg"/>

    <menuitem id="menu_project_report_main" 
              name="Daily Reports" 
              parent="menu_project_report_root" 
              action="action_project_report" 
              sequence="10"/>

    <menuitem id="menu_contract_performance_report" 
              name="Contract Performance Reports" 
              parent="menu_project_report_root" 
              action="action_contract_performance_report" 
              sequence="20"/>

    <menuitem id="menu_information_receipt_form" 
              name="Information Receipt Forms" 
              parent="menu_project_report_root" 
              action="action_information_receipt_form" 
              sequence="30"/>

    <menuitem id="menu_project_report_config" 
              name="Configuration" 
              parent="menu_project_report_root" 
              sequence="40"/>
</odoo>