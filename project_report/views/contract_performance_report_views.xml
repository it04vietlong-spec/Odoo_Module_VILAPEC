<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contract_performance_report_tree" model="ir.ui.view">
        <field name="name">contract.performance.report.tree</field>
        <field name="model">contract.performance.report</field>
        <field name="arch" type="xml">
            <list string="Contract Performance Reports" 
                  decoration-info="state=='draft'" 
                  decoration-success="state=='approved'" 
                  decoration-warning="state=='submitted'" 
                  decoration-danger="state=='rejected'"
                  class="o_contract_performance_report_list">
                <field name="name"/>
                <field name="contract_number"/>
                <field name="customer_id"/>
                <field name="employee_id"/>
                <field name="state" widget="badge"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="approved_by"/>
                <field name="approved_date"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_contract_performance_report_form" model="ir.ui.view">
        <field name="name">contract.performance.report.form</field>
        <field name="model">contract.performance.report</field>
        <field name="arch" type="xml">
            <form string="Contract Performance Report" class="o_contract_performance_report_form">
                <header>
                    <button name="action_submit" 
                            string="Confirm" 
                            type="object" 
                            class="btn-primary" 
                            invisible="state != 'draft'"/>
                    <button name="action_approve" 
                            string="Approve" 
                            type="object" 
                            class="btn-success" 
                            groups="hr_timesheet.group_hr_timesheet_approver"
                            invisible="state != 'submitted'"/>
                    <button name="action_reject" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger" 
                            groups="hr_timesheet.group_hr_timesheet_approver"
                            invisible="state != 'submitted'"/>
                    <button name="action_reset_to_draft" 
                            string="Reset to Draft" 
                            type="object" 
                            class="btn-secondary" 
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name..." class="o_text_overflow"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" required="True" readonly="state == 'approved'"/>
                            <field name="employee_id" required="True" domain="[('company_id', 'in', [company_id, False])]" readonly="state == 'approved'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state == 'approved'"/>
                        </group>
                        <group>
                            <field name="contract_number" required="True" readonly="state == 'approved'"/>
                            <field name="customer_id" required="True" readonly="state == 'approved'"/>
                            <field name="execution_location" readonly="state == 'approved'"/>
                            <field name="contract_execution_datetime" readonly="state == 'approved'"/>
                        </group>
                    </group>
                    <group>
                        <field name="task_description" placeholder="Task description..." readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="according_to_plan" placeholder="According to plan..." readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="actual_result" placeholder="Actual result..." readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="assessment" placeholder="Assessment..." readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Notes..." readonly="state == 'approved'"/>
                    </group>
                    <group invisible="state not in ['approved', 'rejected']">
                        <group invisible="state != 'approved'">
                            <field name="approved_by" readonly="True"/>
                            <field name="approved_date" readonly="True"/>
                        </group>
                        <group invisible="state != 'rejected'">
                            <field name="rejection_reason" readonly="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_contract_performance_report_search" model="ir.ui.view">
        <field name="name">contract.performance.report.search</field>
        <field name="model">contract.performance.report</field>
        <field name="arch" type="xml">
            <search string="Search Contract Performance Reports">
                <field name="name"/>
                <field name="contract_number"/>
                <field name="customer_id"/>
                <field name="employee_id"/>
                <field name="date"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_contract_performance_report_kanban" model="ir.ui.view">
        <field name="name">contract.performance.report.kanban</field>
        <field name="model">contract.performance.report</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_contract_performance_report_kanban">
                <field name="name"/>
                <field name="date"/>
                <field name="contract_number"/>
                <field name="customer_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="contract_number"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Customer:</strong> <field name="customer_id"/>
                                    </div>
                                    <div>
                                        <strong>Date:</strong> <field name="date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>