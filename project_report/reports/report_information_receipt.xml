<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_information_receipt_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h3><strong>PHIẾU TIẾP NHẬN THÔNG TIN</strong></h3>
                        </div>
                        <table class="table table-borderless mt-3">
                            <tr>
                                <td width="20%"><strong>Tên khách hàng:</strong></td>
                                <td width="30%"><span t-field="o.customer_id.name"/></td>
                                <td width="15%"><strong>Địa chỉ:</strong></td>
                                <td width="35%"><span t-field="o.address"/></td>
                            </tr>
                            <tr>
                                <td><strong>Số yêu cầu/hợp đồng:</strong></td>
                                <td><span t-field="o.request_contract_number"/></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>

                        <div class="mt-3">
                            <strong>Thông tin tiếp nhận như sau:</strong>
                        </div>

                        <table class="table table-bordered mt-3">
                            <thead>
                                <tr class="text-center">
                                    <th style="width: 5%"><strong>STT</strong></th>
                                    <th style="width: 20%"><strong>Tên hàng hóa</strong></th>
                                    <th style="width: 25%"><strong>Thông tin tiếp nhận</strong></th>
                                    <th style="width: 15%"><strong>Thời gian xử lý nội bộ</strong></th>
                                    <th style="width: 20%"><strong>Thời gian phản hồi/gửi khách</strong></th>
                                    <th style="width: 15%"><strong>Ghi chú</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center">1</td>
                                    <td><span t-field="o.product_name"/></td>
                                    <td><span t-field="o.received_information"/></td>
                                    <td class="text-center">
                                        <span t-field="o.internal_processing_datetime"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="o.response_delivery_datetime"/>
                                    </td>
                                    <td><span t-field="o.notes"/></td>
                                </tr>
                                <tr t-foreach="range(2)" t-as="empty_line">
                                    <td class="text-center" style="height: 50px;"><span t-esc="empty_line + 2"/></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row mt-5">
                            <div class="col-12 text-right">
                                <span>Hà Nội, ngày ..... tháng ..... năm .....</span>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-4 text-center">
                                <strong>NGƯỜI TIẾP NHẬN</strong>
                            </div>
                            <div class="col-4 text-center">
                                <strong>TRƯỞNG PHÒNG</strong>
                            </div>
                            <div class="col-4 text-center">
                                <strong>BAN GIÁM ĐỐC</strong>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
