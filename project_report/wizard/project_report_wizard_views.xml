<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_report_wizard_form" model="ir.ui.view">
        <field name="name">project.report.wizard.form</field>
        <field name="model">project.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Daily Reports">
                <group>
                    <group>
                        <field name="employee_id" required="True"/>
                        <field name="project_id" required="True"/>
                        <field name="task_id"/>
                    </group>
                    <group>
                        <field name="date_from" required="True"/>
                        <field name="date_to" required="True"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate Reports" name="action_generate_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_project_report_reject_wizard_form" model="ir.ui.view">
        <field name="name">project.report.reject.wizard.form</field>
        <field name="model">project.report.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Daily Report">
                <group>
                    <field name="report_id" readonly="True"/>
                    <field name="rejection_reason" placeholder="Please provide a reason for rejection..." required="True"/>
                </group>
                <footer>
                    <button string="Reject" name="action_reject" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Daily Reports</field>
        <field name="res_model">project.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_project_report_wizard" 
              name="Generate Reports" 
              parent="menu_project_report_config" 
              action="action_project_report_wizard" 
              sequence="50"/>

</odoo>
