<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_information_receipt_form_reject_wizard" model="ir.ui.view">
        <field name="name">information.receipt.form.reject.wizard.form</field>
        <field name="model">information.receipt.form.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Information Receipt Form">
                <group>
                    <field name="form_id" invisible="1"/>
                    <field name="rejection_reason" placeholder="Please provide a reason for rejection..."/>
                </group>
                <footer>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_information_receipt_form_reject_wizard" model="ir.actions.act_window">
        <field name="name">Reject Information Receipt Form</field>
        <field name="res_model">information.receipt.form.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
