<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contract_performance_report_reject_wizard" model="ir.ui.view">
        <field name="name">contract.performance.report.reject.wizard.form</field>
        <field name="model">contract.performance.report.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Contract Performance Report">
                <group>
                    <field name="report_id" invisible="1"/>
                    <field name="rejection_reason" placeholder="Please provide a reason for rejection..."/>
                </group>
                <footer>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_performance_report_reject_wizard" model="ir.actions.act_window">
        <field name="name">Reject Contract Performance Report</field>
        <field name="res_model">contract.performance.report.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
