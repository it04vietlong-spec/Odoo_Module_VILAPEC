<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kế thừa form view của account.move để thêm trường số tiền bằng chữ -->
    <record id="view_move_form_inherit_money_to_text" model="ir.ui.view">
        <field name="name">account.move.form.inherit.money.to.text</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group name="amount_in_words_group" string="Số tiền bằng chữ">
                    <field name="amount_in_words" 
                           readonly="1" 
                           widget="text" 
                           placeholder="Số tiền bằng chữ sẽ hiển thị ở đây..."
                           class="oe_inline"/>
                </group>
            </xpath>
        </field>
    </record>
    
    <!-- Kế thừa tree view để hiển thị trong danh sách hóa đơn -->
    <record id="view_move_tree_inherit_money_to_text" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.money.to.text</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="amount_in_words" 
                       readonly="1" 
                       optional="hide"
                       string="Số tiền bằng chữ"/>
            </xpath>
        </field>
    </record>
    

</odoo>
