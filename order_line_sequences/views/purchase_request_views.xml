<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Inherited form view of purchase request -->
	<!-- Inherit the inline list view in purchase request form -->
	<record id="view_purchase_request_form_inherit_seq" model="ir.ui.view">
		<field name="name">purchase.request.form.inherit.seq</field>
		<field name="model">purchase.request</field>
		<field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='line_ids']//field[@name='product_id']" position="before">
				<field name="sequence_number" string="#" readonly="1"/>
			</xpath>
		</field>
	</record>
</odoo>

