<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_sequence_number" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sequence_number</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <!-- Kích hoạt compute làm sạch STT khi mở form -->
            <xpath expr="//sheet" position="inside">
                <field name="sequence_cleanup_done" invisible="1"/>
            </xpath>
            <!-- Thay thế cột handle bằng STT -->
            <xpath expr="//field[@name='order_line']/list/field[@name='sequence']" position="replace">
                <field name="sequence_number" string="#" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>


